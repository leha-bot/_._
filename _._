#ifndef ASSTREAM_H
#define ASSTREAM_H

#include <iostream>

struct asstream {
  struct asstream_tag {};
  asstream_tag _;

  asstream_tag& operator*(asstream&) { return _; }
} _;

template <typename T>
std::ostream& operator<<(asstream::asstream_tag&, const T& o) {
  std::cout << o;
  return std::cout;
}

template <typename T>
std::istream& operator>>(asstream::asstream_tag&, T& o) {
  std::cin >> o;
  return std::cin;
}

#endif
